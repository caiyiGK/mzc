/**app.wxss**/

.clearfix:before, .clearfix:after{content:"\0020";display:block;height:0;overflow:hidden;}
.clearfix:after{clear:both;}
.clearfix{zoom:1;}

/** 页面布局 **/
.layout-page {
  height: 100%;
  background-color: #eaf7ff;
}
.layout-page-flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}
.layout-page-menu {
    padding-bottom: 100rpx;
}

/** panel **/
.layout-panel {
    background-color: #FFF;
    box-sizing: border-box;
    padding: 0 25rpx;
    width: 100%;
    margin-bottom: 20rpx;
}
.layout-panel .content {
    width: 100%;
}

/** 公共头部 **/
.layout-hd {
    color: #1376bc;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
}
.layout-hd.color-w {
    color: #FFF;
    position: relative;
    /* background-color: #1376bc; */
}
.layout-hd.color-w image {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
}
.layout-hd.color-w span,
.layout-hd.color-w text {
    position: relative;
    z-index: 2;
}
.layout-hd span {
    display: inline-block;
}
.layout-hd text {
    font-size: 24rpx;
    display: inline-block;
    float: left;
}
.layout-hd span.hd {
    font-size: 32rpx;
    font-weight: bold;
    float: left;
}
.layout-hd span.btn {
    float: right;
    font-size: 24rpx;
}


/** 导航定位 **/
.layout-position {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 100;
}
