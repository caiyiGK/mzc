/**app.wxss**/

.clearfix:before, .clearfix:after{content:"\0020";display:block;height:0;overflow:hidden;}
.clearfix:after{clear:both;}
.clearfix{zoom:1;}

.layout-page {
  height: 100%;
  background-color: #eaf7ff;
}
.layout-page-flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.layout-banner {
    padding: 0 25rpx;
}
.layout-banner .content {
    display: block;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 10rpx #666;
}

/** 发现页面 **/
.layout-panel {
    background-color: #FFF;
    box-sizing: border-box;
    padding: 0 25rpx;
    width: 100%;
    margin-bottom: 20rpx;
}
.layout-panel .content {
    width: 100%;
}
.layout-online .content .content-loop {
    padding-top: 20rpx;
}
.layout-online .content .content-loop .item {
    display: block;
    margin-bottom: 40rpx;
}
.layout-online .content .content-loop .item:last-child {
    margin-bottom: 0;
}

.layout-panel .content .loop-tag  {
    margin: 20rpx -5rpx 0;
}
.layout-panel .content .loop-tag > view {
    box-sizing: border-box;
    width: 33.333333%;
    float: left;
    padding: 0 5rpx 10rpx;
}

.layout-hd {
    color: #1376bc;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
}
.layout-hd.color-w {
    color: #FFF;
    position: relative;
    /* background-color: #1376bc; */
}
.layout-hd.color-w image {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
}
.layout-hd.color-w span,
.layout-hd.color-w text {
    position: relative;
    z-index: 2;
}
.layout-hd span {
    display: inline-block;
}
.layout-hd text {
    font-size: 24rpx;
    display: inline-block;
    float: left;
}
.layout-hd span.hd {
    font-size: 32rpx;
    font-weight: bold;
    float: left;
}
.layout-hd span.btn {
    float: right;
    font-size: 24rpx;
}


.layout-live .content {
    padding-bottom: 15rpx;
    box-shadow: 0px 2rpx 2rpx #2468a5;
    border-radius: 0rpx 0rpx 6rpx 6rpx;
}


.layout-tab-link {
    padding: 0 25rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
}
.layout-tab-link .content {
    display: flex;
    justify-content: space-between;
    margin: 20rpx -7rpx;
}
.layout-tab-link .item {
    border-radius: 6rpx;
    display: inline-flex;
    justify-content: space-between;
    overflow: hidden;
    padding: 30rpx 10rpx;
    background-color: #FFF;
    box-shadow: 0rpx 0rpx 2rpx #999;
    flex: 1;
    margin: 0 7rpx;
}
.layout-tab-link .item image {
    height: 80rpx;
    width: 80rpx;
}
.layout-tab-link .item view {
    margin-left: 10rpx;
    overflow: hidden;
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    width: 100%;
}
.layout-tab-link .item view text {
    display: block;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.layout-tab-link .item view .hd {
    font-size: 32rpx;
    color: #1376bc;
}
.layout-tab-link .item view .brief {
    font-size: 24rpx;
    color: #3baae2;
}


.layout-question-tab {
    width: 400rpx;
    display: flex;
    flex-direction: column;
}
.layout-question-tab > image {
    width: 100%;
    height: 10rpx;
    /* border-radius: 8rpx 8rpx 0 0; */
    overflow: hidden;
}
.layout-question-tab .hd {
    padding-left: 60rpx;
    font-size: 26rpx;
    color: #333;
    height: 70rpx;
    line-height: 35rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    position: relative;
}
.layout-question-tab .hd image {
    position: absolute;
    left: 0;
    top: 0;
    height: 50rpx;
    width: 50rpx;
}
