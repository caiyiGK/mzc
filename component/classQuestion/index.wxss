.layout-question-tab {
    width: 400rpx;
    display: flex;
    flex-direction: column;
    border-radius: 8rpx;
    overflow: hidden;
    box-shadow: 0 0 8rpx #e5e5e5;
}
.layout-question-tab > image {
    width: 100%;
    height: 10rpx;
    overflow: hidden;
}
.layout-question-tab .hd {
    padding: 20rpx 15rpx 0 75rpx;
    font-size: 26rpx;
    color: #333;
    height: 70rpx;
    line-height: 35rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    position: relative;
}
.layout-question-tab .hd image {
    position: absolute;
    left: 15rpx;
    top: 20rpx;
    height: 50rpx;
    width: 50rpx;
}
.layout-question-tab .info {
    box-sizing: border-box;
    padding: 20rpx 15rpx 20rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
    overflow: hidden;
}
.layout-question-tab .info .txt {
    border-radius: 6rpx;
    flex: 1;
    background-color: #ffe5cd;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
    padding: 15rpx;
}
.layout-question-tab .info .txt text {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    position: relative;
}
.layout-question-tab .audio {
    padding: 0 15rpx 30rpx 70rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70rpx;
}
.layout-question-tab .audio .time {
    background-color: #ebf8ff;
    border-radius: 20rpx;
    flex: 1;
    overflow: hidden;
    position: relative;
    font-size: 24rpx;
    height: 32rpx;
    padding: 10rpx 15rpx;
    color: #2468a5;
}
.layout-question-tab .audio .time text {
    font-size: 26rpx;
}
.layout-question-tab .info .pic,
.layout-question-tab .audio .pic {
    background-color: #fafafa;
    border-radius: 100%;
    overflow: hidden;
    height: 70rpx;
    width: 70rpx;
}
.layout-question-tab .info .pic image,
.layout-question-tab .audio .pic image {
    display: block;
    height: 100%;
    width: 100%;
}
.layout-question-tab .info .pic {
    margin-right: 20rpx;
}
.layout-question-tab .audio .pic {
    margin-left: 20rpx;
}
.layout-question-tab .btn {
    border-top: 1rpx solid #f0f0f0;
    display: flex;
    justify-content: space-between;
}
.layout-question-tab .btn view {
    position: relative;
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    font-size: 26rpx;
    color: #333;
}
.layout-question-tab .btn view.read {
    color: #333;
    position: relative;
}
.layout-question-tab .btn view.read:before {
    position: absolute;
    content: '';
    display: block;
    height: 40rpx;
    width: 1rpx;
    background-color: #f0f0f0;
    top: 15rpx;
    left: 0;
}
